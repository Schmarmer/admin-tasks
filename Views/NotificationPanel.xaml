<UserControl x:Class="Admin_Tasks.Views.NotificationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Admin_Tasks.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    
    <UserControl.Resources>
        <!-- Converter -->
        <converters:NotificationTypeToIconConverter x:Key="NotificationTypeToIconConverter" />
        <converters:ReadStatusToIconConverter x:Key="ReadStatusToIconConverter" />
        <converters:ReadStatusToTooltipConverter x:Key="ReadStatusToTooltipConverter" />
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Notification Item Style -->
        <Style x:Key="NotificationItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Unread Notification Style -->
        <Style x:Key="UnreadNotificationStyle" TargetType="Border" BasedOn="{StaticResource NotificationItemStyle}">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        
        <!-- Notification Type Icons -->
        <Style x:Key="NotificationIconStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>
        
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>
        
        <!-- Empty State Style -->
        <Style x:Key="EmptyStateStyle" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.6" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="🔔 Benachrichtigungen" Style="{StaticResource HeaderStyle}" />
            
            <!-- Unread Count Badge -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource AccentBrush}" 
                    CornerRadius="10" 
                    Padding="6,2" 
                    Margin="8,0" 
                    Visibility="{Binding HasUnreadNotifications, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding UnreadCount}" 
                           Foreground="White" 
                           FontSize="12" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" />
            </Border>
            
            <!-- Mark All Read Button -->
            <Button Grid.Column="2" 
                    Content="Alle als gelesen markieren" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    Command="{Binding MarkAllAsReadCommand}" 
                    Visibility="{Binding HasUnreadNotifications, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    FontSize="11" 
                    Padding="8,4" />
        </Grid>
        
        <!-- Filter Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <RadioButton Content="Alle" 
                         IsChecked="{Binding ShowAllNotifications}" 
                         Style="{StaticResource FilterRadioButtonStyle}" 
                         Margin="0,0,12,0" />
            <RadioButton Content="Ungelesen" 
                         IsChecked="{Binding ShowUnreadOnly}" 
                         Style="{StaticResource FilterRadioButtonStyle}" 
                         Margin="0,0,12,0" />
            <RadioButton Content="Aufgaben" 
                         IsChecked="{Binding ShowTaskNotifications}" 
                         Style="{StaticResource FilterRadioButtonStyle}" />
        </StackPanel>
        
        <!-- Notifications List -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            
            <!-- Container für alle Inhalte -->
            <Grid>
                <!-- Loading Indicator -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50">
                        <ProgressBar IsIndeterminate="True" Width="100" Height="4" 
                                     Style="{DynamicResource ModernProgressBarStyle}" />
                        <TextBlock Text="Benachrichtigungen werden geladen..." 
                                   HorizontalAlignment="Center" 
                                   Margin="0,12,0,0" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" />
                    </StackPanel>
                </Grid>
                
                <!-- Empty State -->
                <StackPanel Style="{StaticResource EmptyStateStyle}" 
                            Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="📭" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" />
                    <TextBlock Text="Keine Benachrichtigungen" 
                               FontSize="16" 
                               FontWeight="Medium" 
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource TextBrush}" />
                    <TextBlock Text="Du bist auf dem neuesten Stand!" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Margin="0,4,0,0" 
                               Foreground="{DynamicResource SecondaryTextBrush}" />
                </StackPanel>
                
                <!-- Notifications ItemsControl -->
                <ItemsControl ItemsSource="{Binding FilteredNotifications}" 
                              Visibility="{Binding HasNotifications, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border MouseLeftButtonUp="NotificationItem_Click" 
                                Tag="{Binding}">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource NotificationItemStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRead}" Value="False">
                                            <Setter Property="Style" Value="{StaticResource UnreadNotificationStyle}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Notification Icon -->
                                <TextBlock Grid.Column="0" Style="{StaticResource NotificationIconStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource NotificationTypeToIconConverter}">
                                            <Binding Path="Type" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                
                                <!-- Content -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Title}" 
                                               FontWeight="Medium" 
                                               FontSize="14" 
                                               Foreground="{DynamicResource TextBrush}" 
                                               TextTrimming="CharacterEllipsis" />
                                    
                                    <TextBlock Text="{Binding Message}" 
                                               FontSize="12" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" 
                                               TextWrapping="Wrap" 
                                               Margin="0,2,0,4" 
                                               MaxHeight="40" 
                                               TextTrimming="CharacterEllipsis" />
                                    
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                               FontSize="10" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                                
                                <!-- Actions -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <!-- Mark as Read/Unread -->
                                    <Button Width="24" Height="24" 
                                            Style="{StaticResource IconButtonStyle}" 
                                            Command="{Binding DataContext.ToggleReadStatusCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" 
                                            ToolTip="{Binding IsRead, Converter={StaticResource ReadStatusToTooltipConverter}}" 
                                            Margin="4,0">
                                        <TextBlock Text="{Binding IsRead, Converter={StaticResource ReadStatusToIconConverter}}" 
                                                   FontSize="12" />
                                    </Button>
                                    
                                    <!-- Delete -->
                                    <Button Content="🗑️" 
                                            Width="24" Height="24" 
                                            Style="{StaticResource IconButtonStyle}" 
                                            Command="{Binding DataContext.DeleteNotificationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" 
                                            ToolTip="Benachrichtigung löschen" 
                                            Margin="4,0,0,0" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>