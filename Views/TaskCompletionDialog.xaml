<Window x:Class="Admin_Tasks.Views.TaskCompletionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Admin_Tasks.Converters"
        mc:Ignorable="d"
        Title="Aufgabe abschließen"
        Height="700" Width="600"
        MinHeight="600" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>
        
        <!-- Rating Button Style -->
        <Style x:Key="RatingButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="✅" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <TextBlock Text="Aufgabe abschließen" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" />
                </StackPanel>
                
                <Button Grid.Column="1" Content="✕" Width="32" Height="32" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Click="CloseButton_Click" />
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" Padding="24">
            <StackPanel>
                <!-- Task Info -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="📋 Aufgabe" />
                        <TextBlock Text="{Binding TaskTitle}" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" TextWrapping="Wrap" Margin="0,0,0,8" />
                        <TextBlock Text="{Binding TaskDescription}" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   TextWrapping="Wrap" LineHeight="20" />
                    </StackPanel>
                </Border>

                <!-- Time Tracking -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="⏱️ Zeiterfassung" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Benötigte Zeit:" 
                                       VerticalAlignment="Center" Margin="0,0,12,0" 
                                       Foreground="{DynamicResource TextBrush}" />
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBox x:Name="HoursTextBox" Width="60" Height="36" 
                                         Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}" 
                                         VerticalContentAlignment="Center" TextAlignment="Center" 
                                         Background="{DynamicResource BackgroundBrush}" 
                                         BorderBrush="{DynamicResource BorderBrush}" 
                                         Foreground="{DynamicResource TextBrush}" />
                                <TextBlock Text="h" VerticalAlignment="Center" Margin="8,0" 
                                           Foreground="{DynamicResource TextBrush}" />
                                <TextBox x:Name="MinutesTextBox" Width="60" Height="36" 
                                         Text="{Binding Minutes, UpdateSourceTrigger=PropertyChanged}" 
                                         VerticalContentAlignment="Center" TextAlignment="Center" 
                                         Background="{DynamicResource BackgroundBrush}" 
                                         BorderBrush="{DynamicResource BorderBrush}" 
                                         Foreground="{DynamicResource TextBrush}" />
                                <TextBlock Text="min" VerticalAlignment="Center" Margin="8,0" 
                                           Foreground="{DynamicResource TextBrush}" />
                            </StackPanel>
                            
                            <TextBlock Grid.Column="2" Text="{Binding TotalTimeText}" 
                                       VerticalAlignment="Center" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource AccentBrush}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Conclusion Text -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="📝 Abschlussbericht" />
                        <TextBox x:Name="ConclusionTextBox" Height="120" 
                                 Text="{Binding CompletionText, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Background="{DynamicResource BackgroundBrush}" 
                                 BorderBrush="{DynamicResource BorderBrush}" 
                                 Foreground="{DynamicResource TextBrush}" 
                                 Padding="12" />
                        <TextBlock Text="Beschreiben Sie kurz, wie die Aufgabe gelöst wurde und welche Ergebnisse erzielt wurden." 
                                   FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" 
                                   Margin="0,8,0,0" FontStyle="Italic" />
                    </StackPanel>
                </Border>

                <!-- Difficulty Rating -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="🎯 Schwierigkeitsgrad" />
                        <TextBlock Text="Wie schwierig war diese Aufgabe?" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,12" />
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="Difficulty1" Content="1" Style="{StaticResource RatingButtonStyle}" 
                                    Click="DifficultyRating_Click" Tag="1" />
                            <Button x:Name="Difficulty2" Content="2" Style="{StaticResource RatingButtonStyle}" 
                                    Click="DifficultyRating_Click" Tag="2" />
                            <Button x:Name="Difficulty3" Content="3" Style="{StaticResource RatingButtonStyle}" 
                                    Click="DifficultyRating_Click" Tag="3" />
                            <Button x:Name="Difficulty4" Content="4" Style="{StaticResource RatingButtonStyle}" 
                                    Click="DifficultyRating_Click" Tag="4" />
                            <Button x:Name="Difficulty5" Content="5" Style="{StaticResource RatingButtonStyle}" 
                                    Click="DifficultyRating_Click" Tag="5" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <TextBlock Text="Sehr einfach" FontSize="11" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" />
                            <TextBlock Text="Sehr schwierig" FontSize="11" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" Margin="120,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Satisfaction Rating -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="😊 Zufriedenheit" />
                        <TextBlock Text="Wie zufrieden sind Sie mit dem Ergebnis?" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,12" />
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="Satisfaction1" Content="😞" Style="{StaticResource RatingButtonStyle}" 
                                    Click="SatisfactionRating_Click" Tag="1" />
                            <Button x:Name="Satisfaction2" Content="😐" Style="{StaticResource RatingButtonStyle}" 
                                    Click="SatisfactionRating_Click" Tag="2" />
                            <Button x:Name="Satisfaction3" Content="🙂" Style="{StaticResource RatingButtonStyle}" 
                                    Click="SatisfactionRating_Click" Tag="3" />
                            <Button x:Name="Satisfaction4" Content="😊" Style="{StaticResource RatingButtonStyle}" 
                                    Click="SatisfactionRating_Click" Tag="4" />
                            <Button x:Name="Satisfaction5" Content="😍" Style="{StaticResource RatingButtonStyle}" 
                                    Click="SatisfactionRating_Click" Tag="5" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Additional Notes -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="💭 Zusätzliche Notizen" />
                        <TextBox x:Name="AdditionalNotesTextBox" Height="80" 
                                 Text="{Binding AdditionalNotes, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Background="{DynamicResource BackgroundBrush}" 
                                 BorderBrush="{DynamicResource BorderBrush}" 
                                 Foreground="{DynamicResource TextBrush}" 
                                 Padding="12" />
                        <TextBlock Text="Optionale Anmerkungen, Verbesserungsvorschläge oder Hinweise für zukünftige Aufgaben." 
                                   FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" 
                                   Margin="0,8,0,0" FontStyle="Italic" />
                    </StackPanel>
                </Border>

                <!-- Image Upload -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="📷 Abschlussbild (optional)" />
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <Button Grid.Row="0" Content="📁 Bild auswählen" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Click="SelectImage_Click" 
                                    HorizontalAlignment="Left" Margin="0,0,0,12" />
                            
                            <Border Grid.Row="1" x:Name="ImagePreviewBorder" 
                                    Visibility="{Binding HasCompletionImage, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                                    CornerRadius="4" Padding="8">
                                <StackPanel>
                                    <Image x:Name="ImagePreview" MaxHeight="200" 
                                           Source="{Binding CompletionImageSource}" 
                                           Stretch="Uniform" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding CompletionImageName}" 
                                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                                   VerticalAlignment="Center" />
                                        <Button Content="🗑️" Style="{StaticResource SecondaryButtonStyle}" 
                                                Click="RemoveImage_Click" Margin="12,0,0,0" 
                                                Width="32" Height="24" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" 
                Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Abbrechen" Style="{StaticResource SecondaryButtonStyle}" 
                        Click="CancelButton_Click" Margin="0,0,12,0" Padding="20,10" />
                <Button Content="✅ Aufgabe abschließen" Style="{StaticResource SuccessButtonStyle}" 
                        Click="CompleteButton_Click" Padding="20,10" 
                        IsEnabled="{Binding CanComplete}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>