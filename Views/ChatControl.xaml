<UserControl x:Class="Admin_Tasks.Views.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:Admin_Tasks.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter" />
        
        <!-- Chat Message Style -->
        <Style x:Key="ChatMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
        
        <!-- Own Message Style -->
        <Style x:Key="OwnMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="MaxWidth" Value="300" />
        </Style>
        
        <!-- Other Message Style -->
        <Style x:Key="OtherMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="MaxWidth" Value="300" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" 
                Padding="16,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="💬" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBlock Text="Task-Diskussion" FontSize="14" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Comments.Count, StringFormat='({0} Kommentare)'}" 
                           FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" 
                           VerticalAlignment="Center" Margin="8,0,0,0" />
            </StackPanel>
        </Border>

        <!-- Chat Messages -->
        <ScrollViewer Grid.Row="1" x:Name="ChatScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Padding="16">
            <ItemsControl ItemsSource="{Binding Comments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,12">
                            <!-- Message Container -->
                            <Border>
                                <Border.Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOwnMessage}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                <Setter Property="MaxWidth" Value="300" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsOwnMessage}" Value="False">
                                                <Setter Property="HorizontalAlignment" Value="Left" />
                                                <Setter Property="MaxWidth" Value="300" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <StackPanel>
                                    <!-- Message Header -->
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Comment.User.Username}" 
                                                   FontSize="12" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextBrush}" />
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Comment.CreatedAt, StringFormat=HH:mm}" 
                                                       FontSize="10" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       Margin="0,0,8,0" />
                                            
                                            <!-- Edit Indicator -->
                                            <TextBlock Text="✏️" FontSize="10" 
                                                       Visibility="{Binding Comment.IsEdited, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                       ToolTip="Bearbeitet" />
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- Message Content -->
                                    <TextBlock Text="{Binding Comment.Content}" 
                                               TextWrapping="Wrap" 
                                               Foreground="{DynamicResource TextBrush}" 
                                               LineHeight="18" />
                                    
                                    <!-- Reply Indicator -->
                                    <Border Visibility="{Binding Comment.ParentComment, Converter={StaticResource NotNullToVisibilityConverter}}" 
                                            Background="{DynamicResource SecondaryBackgroundBrush}" 
                                            CornerRadius="4" Padding="8,4" Margin="0,6,0,0">
                                        <StackPanel>
                                            <TextBlock Text="Antwort auf:" FontSize="10" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" />
                                            <TextBlock Text="{Binding Comment.ParentComment.Content}" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       TextTrimming="CharacterEllipsis" 
                                                       MaxHeight="40" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Message Input -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" 
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Reply Preview -->
                <Border Grid.Row="0" 
                        Visibility="{Binding ReplyToComment, Converter={StaticResource NotNullToVisibilityConverter}}" 
                        Background="{DynamicResource SecondaryBackgroundBrush}" 
                        CornerRadius="4" Padding="8" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Antwort auf:" FontSize="10" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ReplyToComment.Content}" 
                                       FontSize="11" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       TextTrimming="CharacterEllipsis" 
                                       MaxHeight="30" />
                        </StackPanel>
                        
                        <Button Grid.Column="1" Content="✕" 
                                Width="20" Height="20" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Click="CancelReply_Click" />
                    </Grid>
                </Border>
                
                <!-- Input Area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" x:Name="MessageTextBox" 
                             Text="{Binding NewMessageText, UpdateSourceTrigger=PropertyChanged}" 
                             AcceptsReturn="True" 
                             MaxHeight="80" 
                             VerticalScrollBarVisibility="Auto" 
                             Background="{DynamicResource BackgroundBrush}" 
                             BorderBrush="{DynamicResource BorderBrush}" 
                             Foreground="{DynamicResource TextBrush}" 
                             Padding="8" 
                             Margin="0,0,8,0" 
                             KeyDown="MessageTextBox_KeyDown" />
                    
                    <Button Grid.Column="1" Content="📤" 
                            Width="40" Height="32" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Click="SendMessage_Click" 
                            IsEnabled="{Binding CanSendMessage}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>