<Window x:Class="Admin_Tasks.Views.TaskDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Admin_Tasks.Converters"
        mc:Ignorable="d"
        Title="Task Details"
        Height="600" Width="800"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter" />
        
        <!-- Detail Section Style -->
        <Style x:Key="DetailSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,0,12,0" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“‹" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <TextBlock Text="Task Details" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" />
                </StackPanel>
                
                <Button Grid.Column="1" Content="âœ•" Width="32" Height="32" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Click="CloseButton_Click" />
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" Padding="24">
            <StackPanel>
                <!-- Task Information -->
                <Border Style="{StaticResource DetailSectionStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <!-- Title -->
                        <TextBlock Grid.Row="0" Text="{Binding Task.Title}" FontSize="24" 
                                   FontWeight="Bold" Foreground="{DynamicResource TextBrush}" 
                                   TextWrapping="Wrap" Margin="0,0,0,16" />
                        
                        <!-- Status and Priority -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="{Binding Task.Status, Converter={StaticResource StatusToBrushConverter}}" 
                                    CornerRadius="12" Padding="12,6" Margin="0,0,12,0">
                                <TextBlock Text="{Binding Task.Status}" FontSize="12" 
                                           FontWeight="SemiBold" Foreground="White" />
                            </Border>
                            
                            <Border Grid.Column="2" Background="{Binding Task.Priority, Converter={StaticResource StatusToBrushConverter}}" 
                                    CornerRadius="8" Padding="8,4">
                                <TextBlock Text="{Binding Task.Priority}" FontSize="11" 
                                           FontWeight="SemiBold" Foreground="White" />
                            </Border>
                        </Grid>
                        
                        <!-- Description -->
                        <TextBlock Grid.Row="2" Text="Beschreibung:" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8" />
                        <TextBlock Grid.Row="3" Text="{Binding Task.Description}" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" 
                                   TextWrapping="Wrap" LineHeight="22" Margin="0,0,0,16" />
                        
                        <!-- Metadata -->
                        <Grid Grid.Row="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <!-- First Row: Created and Assigned -->
                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Erstellt am:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding Task.CreatedAt, StringFormat=dd.MM.yyyy HH:mm}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Erstellt von:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding Task.CreatedByUser.Username}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                            </Grid>
                            
                            <!-- Second Row: Assigned and Due Date -->
                            <Grid Grid.Row="1" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Zugewiesen an:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                    <TextBlock Foreground="{DynamicResource SecondaryTextBrush}">
                                        <TextBlock.Text>
                                            <Binding Path="Task.AssignedToUser.Username" FallbackValue="Ohne Besitzer" />
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="FÃ¤lligkeitsdatum:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                    <TextBlock Foreground="{DynamicResource SecondaryTextBrush}">
                                        <TextBlock.Text>
                                            <Binding Path="Task.DueDate" StringFormat="dd.MM.yyyy HH:mm" FallbackValue="Nicht festgelegt" />
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Third Row: Updated and Completed -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Zuletzt aktualisiert:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding Task.UpdatedAt, StringFormat=dd.MM.yyyy HH:mm}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Visibility="{Binding Task.CompletedAt, Converter={StaticResource NotNullToVisibilityConverter}}">
                                    <TextBlock Text="Abgeschlossen am:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding Task.CompletedAt, StringFormat=dd.MM.yyyy HH:mm}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Task-Statistiken Section -->
                <Border Style="{StaticResource DetailSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Task-Statistiken" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Task-ID:" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                <TextBlock Text="{Binding Task.Id}" 
                                           Foreground="{DynamicResource SecondaryTextBrush}" />
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="AnhÃ¤nge:" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                <TextBlock Text="{Binding Attachments.Count}" 
                                           Foreground="{DynamicResource SecondaryTextBrush}" />
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Kommentare:" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4" />
                                <TextBlock Text="{Binding Task.Comments.Count}" 
                                           Foreground="{DynamicResource SecondaryTextBrush}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- BildanhÃ¤nge Section -->
                <Border Style="{StaticResource DetailSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Ž BildanhÃ¤nge" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12" />
                        
                        <!-- AttachmentDisplayControl wird hier eingefÃ¼gt -->
                        <ContentPresenter x:Name="AttachmentDisplayPresenter" />
                    </StackPanel>
                </Border>
                
                <!-- Chat Section -->
                <Border Style="{StaticResource DetailSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¬ Task-Diskussion" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12" />
                        
                        <!-- Chat Control Container -->
                        <Border Background="{DynamicResource BackgroundBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Height="300">
                            <ContentPresenter x:Name="ChatControlPresenter" />
                        </Border>
                    </StackPanel>
                </Border>
                

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" 
                Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ‘ Annehmen" Style="{StaticResource ModernButtonStyle}" 
                        Click="AcceptTask_Click" Margin="0,0,12,0" Padding="16,8" 
                        Visibility="{Binding CanAcceptTask, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="âœï¸ Bearbeiten" Style="{StaticResource ModernButtonStyle}" 
                        Click="EditTask_Click" Margin="0,0,12,0" Padding="16,8" />
                <Button Content="âœ… AbschlieÃŸen" Style="{StaticResource SuccessButtonStyle}" 
                        Click="CompleteTask_Click" Margin="0,0,12,0" Padding="16,8" 
                        Visibility="{Binding Task.IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" />
                <Button Content="ðŸ—‘ï¸ LÃ¶schen" Style="{StaticResource DangerButtonStyle}" 
                        Click="DeleteTask_Click" Margin="0,0,12,0" Padding="16,8" />
                <Button Content="SchlieÃŸen" Style="{StaticResource SecondaryButtonStyle}" 
                        Click="CloseButton_Click" Padding="16,8" />
            </StackPanel>
        </Border>
    </Grid>
</Window>